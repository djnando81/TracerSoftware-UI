<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tracersoftware.roles.controller.RolFormController" styleClass="modal-card">
    <top>
        <Pane minHeight="12" prefHeight="12" maxHeight="12" styleClass="modal-accent" />
    </top>
    <center>
        <VBox spacing="8">
            <HBox styleClass="modal-header"><Label text="Rol" /></HBox>
            <GridPane hgap="10" vgap="10">
                <padding><Insets top="14" right="14" bottom="14" left="14"/></padding>
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="110" prefWidth="120" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="240" prefWidth="300" />
                </columnConstraints>
                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Permisos:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextArea fx:id="txtPermisos" GridPane.rowIndex="1" GridPane.columnIndex="1" prefRowCount="4" />
                <Label fx:id="lblError" textFill="red" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" />
                <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <Button fx:id="btnSave" text="Guardar" />
                    <Button fx:id="btnCancel" text="Cancelar" />
                </HBox>
            </GridPane>
        </VBox>
    </center>
</BorderPane>


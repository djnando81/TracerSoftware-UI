<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.tracersoftware.login.LoginController" style="-fx-background-color: #f4f7fa;">
    <VBox alignment="CENTER" spacing="0">
    <VBox style="-fx-background-color: #fff; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(44,52,64,0.10), 18,0,0,2); -fx-padding: 36 38 32 38;" maxWidth="360.0" maxHeight="340.0" alignment="CENTER" spacing="22">
                <Label text="TracerSoftware" style="-fx-font-size: 24px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-font-weight: bold; -fx-text-fill: #1976d2; -fx-padding: 0 0 2 0;" />
                <Label text="Iniciar sesión" style="-fx-font-size: 16px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-font-weight: 600; -fx-text-fill: #5a6a7a; -fx-padding: 0 0 16 0;" />
                <TextField fx:id="usernameField" promptText="Usuario" style="-fx-background-radius: 7; -fx-border-radius: 7; -fx-background-color: #e9eef3; -fx-border-color: #cfd8dc; -fx-text-fill: #222; -fx-prompt-text-fill: #8a99a8; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-padding: 12 16;" />
                <HBox alignment="CENTER_LEFT" spacing="0">
                    <PasswordField fx:id="passwordField" promptText="Contraseña" style="-fx-background-radius: 7; -fx-border-radius: 7; -fx-background-color: #e9eef3; -fx-border-color: #cfd8dc; -fx-text-fill: #222; -fx-prompt-text-fill: #8a99a8; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-padding: 12 16;" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="passwordVisibleField" promptText="Contraseña" style="-fx-background-radius: 7; -fx-border-radius: 7; -fx-background-color: #e9eef3; -fx-border-color: #cfd8dc; -fx-text-fill: #222; -fx-prompt-text-fill: #8a99a8; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-padding: 12 16; -fx-display-caret: true;" HBox.hgrow="ALWAYS" visible="false" managed="false" />
                    <Button fx:id="togglePasswordButton" focusTraversable="false" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 0 8;" minWidth="32" minHeight="32" maxWidth="32" maxHeight="32" text="👁" />
                </HBox>
                <VBox spacing="10" alignment="CENTER" prefWidth="260" maxWidth="320">
                    <Button text="🔓  Ingresar" fx:id="loginButton" onAction="#onLogin" styleClass="button-blue form-button" prefWidth="240" maxWidth="280" minHeight="32" maxHeight="36" style="-fx-font-size: 13px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif;" />
                    <Button text="❌  Cerrar" fx:id="closeButton" onAction="#onClose" styleClass="button-red form-button" prefWidth="240" maxWidth="280" minHeight="32" maxHeight="36" style="-fx-font-size: 13px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif;" />
                    <Button text="↻  Reconectar API" fx:id="reconnectButton" onAction="#onReconnect" styleClass="button-yellow form-button" prefWidth="240" maxWidth="280" minHeight="32" maxHeight="36" style="-fx-font-size: 13px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif;" />
                </VBox>
                <Label fx:id="apiStatusLabel" text="Estado API: ..." style="-fx-font-size: 13px; -fx-padding: 8 0 0 0; -fx-alignment: center;" alignment="CENTER" />
            </VBox>
            <HBox alignment="CENTER" style="-fx-padding: 32 0 0 0;">
            </HBox>
    </VBox>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import com.tracersoftware.common.controls.SearchBar?>
<?import com.tracersoftware.common.controls.PaginatorControl?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.tracersoftware.almacenes.controller.AlmacenesListController">
   <center>
      <VBox spacing="8" style="-fx-padding:12;" fillWidth="true">
         <!-- OBLIGATORIO: Header con título, búsqueda y botón nuevo -->
         <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Gestión de Almacenes" style="-fx-font-size:16px; -fx-font-weight:bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <SearchBar fx:id="searchBar" promptText="Buscar por nombre o código..." />
            <Button fx:id="btnNuevo" text="Nuevo" />
         </HBox>
         
         <!-- OBLIGATORIO: Tabla con columnas específicas -->
         <TableView fx:id="table" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="colId" text="ID" minWidth="80.0" prefWidth="80.0" />
               <TableColumn fx:id="colNombre" text="Nombre" minWidth="200.0" prefWidth="200.0" />
               <TableColumn fx:id="colCodigo" text="Código" minWidth="120.0" prefWidth="120.0" />
               <TableColumn fx:id="colDescripcion" text="Descripción" minWidth="250.0" prefWidth="250.0" />
               <TableColumn fx:id="colTipo" text="Tipo" minWidth="120.0" prefWidth="120.0" />
               <TableColumn fx:id="colUbicacion" text="Ubicación" minWidth="150.0" prefWidth="150.0" />
               <TableColumn fx:id="colEstado" text="Estado" minWidth="100.0" prefWidth="100.0" />
               <TableColumn fx:id="colAcciones" text="Acciones" minWidth="120.0" prefWidth="120.0" sortable="false" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         
         <!-- OBLIGATORIO: Contenedor para ExportBar -->
         <HBox fx:id="exportBarContainer" spacing="8" alignment="CENTER_RIGHT" />
         
         <!-- OBLIGATORIO: Paginador -->
         <PaginatorControl fx:id="paginator" />
      </VBox>
   </center>
</BorderPane>

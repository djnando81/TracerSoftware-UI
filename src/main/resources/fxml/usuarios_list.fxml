<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tracersoftware.usuarios.controller.UsuariosListController">
    <center>
    <VBox spacing="8" style="-fx-padding:12;">
            <HBox spacing="8">
                <Label text="Usuarios" style="-fx-font-size:16px; -fx-font-weight:bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <!-- Refresh button removed as not required -->
                <Button fx:id="btnNew" text="Nuevo" />
            </HBox>
            <Label fx:id="lblError" textFill="red" wrapText="true" visible="false" managed="false" />
            <StackPane>
                <TableView fx:id="tableUsers" prefHeight="400">
                    <columns>
                        <TableColumn text="ID" fx:id="colId" />
                        <TableColumn text="Nombre" fx:id="colNombre" />
                        <TableColumn text="Rol" fx:id="colRol" />
                        <TableColumn text="Email" fx:id="colEmail" />
                        <TableColumn text="Activo" fx:id="colActivo" />
                        <TableColumn text="Acciones" fx:id="colEdit" />
                    </columns>
                </TableView>
                <!-- container where row overlays will be added programmatically -->
                <Pane fx:id="rowOverlayPane" pickOnBounds="false" />
            </StackPane>
            <com.tracersoftware.common.controls.PaginatorControl fx:id="paginator" />
        </VBox>
    </center>
</BorderPane>

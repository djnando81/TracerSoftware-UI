<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.tracersoftware.common.controls.PaginatorControl?>
<?import com.tracersoftware.common.controls.SearchBar?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tracersoftware.ordenpedidomateriaprima.controller.OrdenPedidoMateriaPrimaListController">
    <center>
        <VBox spacing="8" style="-fx-padding:12;" fillWidth="true">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Órdenes de Pedido - Materia Prima" style="-fx-font-size:16px; -fx-font-weight:bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <SearchBar fx:id="searchBar" />
                <Button fx:id="btnNuevo" text="Nueva Orden" />
            </HBox>
            
            <TableView fx:id="table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="ID" fx:id="colId" />
                    <TableColumn text="Número Orden" fx:id="colNumeroOrden" />
                    <TableColumn text="Proveedor" fx:id="colProveedor" />
                    <TableColumn text="Estado" fx:id="colEstado" />
                    <TableColumn text="Fecha Creación" fx:id="colFechaCreacion" />
                    <TableColumn text="Total" fx:id="colTotal" />
                    <TableColumn text="Acciones" fx:id="colAcciones" />
                </columns>
            </TableView>
            
            <PaginatorControl fx:id="paginator" />
        </VBox>
    </center>
</BorderPane>
